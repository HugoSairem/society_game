<?xml version="1.0" encoding="utf-8"?>
<!-- src/AppBundle/Resources/config/doctrine/User.orm.xml -->
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="MainBundle\Entity\CityPopulation" repository-class="MainBundle\Repository\CityPopulation" table="city_population">
        <id name="id" type="integer" column="id">
            <generator strategy="AUTO"/>
        </id>
        <field name="population" type="integer" column="population" nullable="true"/>

        <many-to-one
                field="city"
                target-entity="MainBundle\Entity\City"
                inversed-by="city">
            <join-column name="city" referenced-column-name="id"/>
        </many-to-one>
        <many-to-one
                field="people"
                target-entity="MainBundle\Entity\People"
                inversed-by="people">
            <join-column name="people" referenced-column-name="id"/>
        </many-to-one>

    </entity>
</doctrine-mapping>