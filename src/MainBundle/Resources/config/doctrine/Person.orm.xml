<?xml version="1.0" encoding="utf-8"?>
<!-- src/AppBundle/Resources/config/doctrine/User.orm.xml -->
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="MainBundle\Entity\Person" repository-class="MainBundle\Repository\Person" table="person">
        <id name="id" type="integer" column="id">
            <generator strategy="AUTO"/>
        </id>
        <field name="name" type="string" length="255" column="name" nullable="true"/>
        <field name="firstname" type="string" length="255" column="firstname" nullable="true"/>
        <field name="age" type="integer" column="age" nullable="true"/>
        <field name="gender" type="integer" column="gender" nullable="true"/>


        <many-to-one
                field="city"
                target-entity="MainBundle\Entity\City"
                inversed-by="city">
            <join-column name="city" referenced-column-name="id"/>
        </many-to-one>
        <many-to-one
                field="people"
                target-entity="MainBundle\Entity\People"
                inversed-by="people">
            <join-column name="people" referenced-column-name="id"/>
        </many-to-one>
    </entity>
</doctrine-mapping>