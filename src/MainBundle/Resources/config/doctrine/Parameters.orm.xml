<?xml version="1.0" encoding="utf-8"?>
<!-- src/AppBundle/Resources/config/doctrine/User.orm.xml -->
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="MainBundle\Entity\Parameters" repository-class="MainBundle\Repository\Parameters" table="parameters">
        <id name="id" type="integer" column="id">
            <generator strategy="AUTO"/>
        </id>
        <field name="tutorial" type="boolean" column="tutorial"/>
        <field name="first_time" type="boolean" column="first_time"/>

        <one-to-one
                field="user"
                target-entity="MainBundle\Entity\User">
            <join-column name="user" referenced-column-name="id"/>
        </one-to-one>
    </entity>
</doctrine-mapping>